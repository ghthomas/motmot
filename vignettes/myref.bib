file = {:Users/mp1728/Library/Application Support/Mendeley Desktop/Downloaded/Nylander et al. - 2004 - Bayesian phylogenetic analysis of combined data.pdf:pdf},
isbn = {1063-5157},
issn = {1063-5157},
journal = {Systematic biology},
number = {1},
pages = {47--67},
pmid = {14965900},
title = {{Bayesian phylogenetic analysis of combined data.}},
volume = {53},
year = {2004}
}
