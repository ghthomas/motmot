journal = {Cladistics},
keywords = {Cladistics,Goloboff,Homoplasy},
number = {5},
pages = {758--773},
pmid = {11903857},
title = {{Weighting against homoplasy improves phylogenetic analysis of morphological data sets}},
url = {http://doi.wiley.com/10.1111/j.1096-0031.2008.00209.x},
