file = {:Users/mp1728/Library/Application Support/Mendeley Desktop/Downloaded/Wilson et al. - 2012 - Adaptive radiation of multituberculate mammals before the extinction of dinosaurs.pdf:pdf},
isbn = {0028-0836},
issn = {0028-0836},
journal = {Nature},
number = {7390},
pages = {457--460},
pmid = {22419156},
