issn = {07374038},
journal = {Molecular Biology and Evolution},
keywords = {evolutionary tree,molecular evolution,phylogenetics,statistical bias,statistical inference,variance},
number = {2},
pages = {457--472},
pmid = {21873298},
title = {{Statistics and truth in phylogenomics}},
volume = {29},
