isbn = {1064-7554},
issn = {1064-7554},
journal = {Journal of Mammalian Evolution},
keywords = {Anchitherium,Cervid,Coprolites,Eutheria,Miocene,Rhinoceros,evolutionary rates,placental ordinal radiation},
number = {2},
pages = {107--124},
title = {{Quantitative Analysis of the Timing of the Origin and Diversification of Extant Placental Orders}},
