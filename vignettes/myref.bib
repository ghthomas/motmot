file = {:Users/mp1728/Library/Application Support/Mendeley Desktop/Downloaded/Sallan, Friedman - 2012 - Heads or tails staged diversification in vertebrate evolutionary radiations.pdf:pdf},
isbn = {1014503108},
issn = {0962-8452},
journal = {Proceedings of the Royal Society B: Biological Sciences},
keywords = {actinopterygii,biodiversity,cladogenesis,disparity,ecomorphology,mass extinction},
number = {1735},
pages = {2025--2032},
pmid = {22189401},
title = {{Heads or tails: staged diversification in vertebrate evolutionary radiations}},
volume = {279},
year = {2012}
}
@article{Coates1998,
