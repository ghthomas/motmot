file = {:Users/mp1728/Library/Application Support/Mendeley Desktop/Downloaded/Guillerme, Cooper - 2016 - Assessment of available anatomical characters for linking living mammals to fossil taxa in phylogenetic analy.pdf:pdf},
isbn = {0000000343251},
