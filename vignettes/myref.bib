doi = {10.1666/10010.1},
file = {:Users/mp1728/Library/Application Support/Mendeley Desktop/Downloaded/Powell, MacGregor - 2011 - A geographic test of species selection using planktonic foraminifera during the CretaceousPaleogene mass exti.pdf:pdf},
