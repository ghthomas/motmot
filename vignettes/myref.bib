file = {:Users/mp1728/Library/Application Support/Mendeley Desktop/Downloaded/Bennett, Leitch, Hanson - 1998 - DNA Amounts in Two Samples of Angiosperm Weeds.pdf:pdf},
issn = {03057364},
journal = {Annals of Botany},
keywords = {angiosperm dna amounts,british garden weeds,dna c-values,genome size,important world weeds},
number = {1},
pages = {121--134},
title = {{DNA Amounts in Two Samples of Angiosperm Weeds}},
