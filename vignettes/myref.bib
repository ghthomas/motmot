journal = {Proceedings of the National Academy of Sciences},
number = {51},
pages = {E7101--E7109},
pmid = {26630008},
title = {{Mandibular and dental characteristics of Late Triassic mammaliaform Haramiyavia and their ramifications for basal mammal evolution}},
