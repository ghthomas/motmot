journal = {Systematic Biology},
keywords = {Comparative method,independent contrasts,phylogenetic regression,robustness},
number = {3},
pages = {245--260},
pmid = {21325220},
title = {{Why the phylogenetic regression appears robust to tree misspecification}},
volume = {60},
year = {2011}
}
