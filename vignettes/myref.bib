doi = {10.1073/pnas.0701257104},
file = {:Users/mp1728/Library/Application Support/Mendeley Desktop/Downloaded/Payne, Finnegan - 2007 - The effect of geographic range on extinction risk during background and mass extinction.pdf:pdf},
