issn = {0094-8373},
journal = {Paleobiology},
number = {1},
pages = {10.1017/pab.2016.34},
title = {{Comparing {\~{}}cal3{\~{}} and other a posteriori time-scaling approaches in a case study with the pterocephaliid trilobites}},
url = {http://www.journals.cambridge.org/abstract{\_}S0094837316000348},
volume = {43},
year = {2017}
}
@article{Friedman2010a,
