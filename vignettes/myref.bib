file = {:Users/mp1728/Library/Application Support/Mendeley Desktop/Downloaded/Tabuce et al. - 2007 - Early Tertiary mammals from North Africa reinforce the molecular Afrotheria clade.pdf:pdf},
isbn = {0962-8452 (Print)$\backslash$n0962-8452 (Linking)},
issn = {0962-8452},
journal = {Proceedings. Biological sciences / The Royal Society},
number = {1614},
